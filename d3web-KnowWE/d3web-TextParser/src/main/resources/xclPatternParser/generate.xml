<!-- 
to use this: add lib/antlr3.jar and antlrworks-1.1.7.jar to the ant task classpath...
-->

	<project default="generate" basedir="../../">
	
	  <property name="profile" value="false" />
	  <property name="report" value="true" />
	  <property name="multithreaded" value="true" />
	  <property name="depend" value="false" />

	<target name="generate">		
        <antlr:antlr3 xmlns:antlr="antlib:org/apache/tools/ant/antlr"
            target="${basedir}/resources/xclPatternParser/xcl.g"
        	outputdirectory="${basedir}/src/de/d3web/textParser/xclPatternParser"
               multithreaded="${multithreaded}"
               report="${report}"
               profile="${profile}"
               depend="${depend}" >
        </antlr:antlr3>
	</target>
</project>