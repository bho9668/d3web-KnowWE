<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>d3web-KnowWE</artifactId>
		<groupId>de.uniwue.d3web</groupId>
		<version>0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.uniwue.d3web</groupId>
	<artifactId>KnowWE</artifactId>
	<packaging>war</packaging>
	<name>KnowWE</name>
	<version>0-SNAPSHOT</version>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<overlays>
						<overlay>
							<groupId>de.uniwue.d3web</groupId>
							<artifactId>d3web-Dialog2</artifactId>
							<excludes>
								<exclude>META-INF/**</exclude>
								<exclude>WEB-INF/web.xml</exclude>
								<exclude>WEB-INF/d3web*.jar</exclude>
								<exclude>WEB-INF/lib/commons-fileupload*</exclude>
								<exclude>WEB-INF/lib/commons-io*</exclude>
								<exclude>WEB-INF/lib/commons-lang*</exclude>
								<exclude>WEB-INF/lib/commons-logging*</exclude>
							</excludes>
						</overlay>
						<overlay>
							<groupId>com.ecryd.jspwiki</groupId>
							<artifactId>jspwiki</artifactId>
							<excludes>
								<exclude>WEB-INF/lib/commons-*.jar</exclude>
							</excludes>
						</overlay>
					</overlays>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>local</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<webResources>
								<resource>
									<directory>src/resources/local</directory>
									<targetPath>/</targetPath>
								</resource>
							</webResources>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<!-- ======= WIKI PLUGINS ======= -->
		<!-- Comment plugin -->
		<profile>
			<id>comment-plugin</id>
			<activation>
				<property>
					<name>comment-plugin</name>
				</property>
			</activation>
			
			<dependencies>
				<dependency>
					<groupId>de.uniwue.d3web</groupId>
					<artifactId>KnowWE-Plugin-Comment</artifactId>
					<version>0-SNAPSHOT</version>
					<scope>compile</scope>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>comment-plugin</id>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>process-resources</phase>

								<configuration>
									<tasks>
										<copy todir="${project.build.directory}/${pom.name}-${pom.version}/KnowWEExtension">
											<fileset dir="../KnowWE-Plugin-Comment/src/main/webapp" />
										</copy>
										<copy file="../KnowWE-Plugin-Comment/src/main/wikiplugin/de.d3web.we.plugin.comment.CommentModule.module" todir="${project.build.directory}/${pom.name}-${pom.version}/KnowWEExtension/modules/"/>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<!-- Calendar plugin -->
		<profile>
			<id>calendar-plugin</id>
			<activation>
				<property>
					<name>calendar-plugin</name>
				</property>
			</activation>
			
			<dependencies>
				<dependency>
					<groupId>de.uniwue.d3web</groupId>
					<artifactId>KnowWE-Plugin-Calendar</artifactId>
					<version>0-SNAPSHOT</version>
					<scope>compile</scope>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>calendar-plugin</id>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>process-resources</phase>

								<configuration>
									<tasks>
										<copy todir="${project.build.directory}/${pom.name}-${pom.version}/KnowWEExtension">
											<fileset dir="../KnowWE-Plugin-Calendar/src/main/webapp" />
										</copy>
										<copy file="../KnowWE-Plugin-Calendar/src/main/wikiplugin/de.d3web.we.plugin.calendar.CalendarModule.module" todir="${project.build.directory}/${pom.name}-${pom.version}/KnowWEExtension/modules/"/>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<!-- Hermes Module -->
		<profile>
			<id>hermes-plugin</id>
			<activation>
				<property>
					<name>hermes-plugin</name>
				</property>
			</activation>
			
			<dependencies>
				<dependency>
					<groupId>de.uniwue.d3web</groupId>
					<artifactId>KnowWE-Plugin-HermesModule</artifactId>
					<version>0-SNAPSHOT</version>
					<scope>compile</scope>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>hermes-plugin</id>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>process-resources</phase>

								<configuration>
									<tasks>
										<copy file="../KnowWE-Plugin-HermesModule/src/main/wikiplugin/de.d3web.we.hermes.HermesPlugin.module" todir="${project.build.directory}/${pom.name}-${pom.version}/KnowWEExtension/modules/"/>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>		
		
		<!-- Flowchart Module -->
		<profile>
			<id>flowchart-plugin</id>
			<activation>
				<property>
					<name>flowchart-plugin</name>
				</property>
			</activation>
			
			<dependencies>
				<dependency>
					<groupId>de.uniwue.d3web</groupId>
					<artifactId>KnowWE-Plugin-Flowchart</artifactId>
					<version>0-SNAPSHOT</version>
					<scope>compile</scope>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>flowchart-plugin</id>
								<goals>
									<goal>run</goal>
								</goals>
								<phase>process-resources</phase>

								<configuration>
									<tasks>
										<copy file="../KnowWE-Plugin-Flowchart/src/main/wikiplugin/de.d3web.we.flow.FlowchartPlugin.module" todir="${project.build.directory}/${pom.name}-${pom.version}/KnowWEExtension/modules/"/>
										
										<property name="flowchartDir" value="${basedir}/../KnowWE-Plugin-Flowchart" />
										<mkdir dir="${project.build.directory}/${pom.name}-${pom.version}/cc"/>
										<copy todir="${project.build.directory}/${pom.name}-${pom.version}/cc">
											<fileset dir="../KnowWE-Plugin-Flowchart/src/main/webapp/html">
												<include name="**/*.js"/>
												<include name="**/*.css"/>
												<include name="**/*.html"/>
												<include name="**/*.gif"/>
												<include name="**/*.png"/>
												<include name="**/*.jpg"/>
											</fileset>
										</copy>
										<copy todir="${project.build.directory}/${pom.name}-${pom.version}">
											<fileset dir="../KnowWE-Plugin-Flowchart/src/main/webapp/jsp"/>
											<!-- fileset dir="${flowchartDir}/src/main/webapp/jsp"/-->
										</copy>		
										
										
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>		
		

	</profiles>

	<dependencies>
		<!--
			Short explanation for JSPWiki: They don't really use Maven, so, the
			build is done by calling the `war' task of the Ant stuff that builds
			JSPWiki, then upload the resulting war to $your_favourite_repository
			or install it locally. The war:war task will then use it as an
			"overlay", i.e. the base of KnowWE. For that to work properly, it is
			important, that "<scope>runtime</scope>" stays in place.
		-->
		<dependency>
			<groupId>com.ecryd.jspwiki</groupId>
			<artifactId>jspwiki</artifactId>
			<version>2.8.2</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
